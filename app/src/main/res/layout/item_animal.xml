<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFCE3B">

    <ImageView
        android:id="@+id/animal_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/thai_name_text_view"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="ThaiName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/eng_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/eng_name_text_view"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:text="EngName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/thai_name_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/thai_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/thai_name_text_view" />

    <TextView
        android:id="@+id/sci_name_text_view"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:text="SciName"
        app:layout_constraintBottom_toBottomOf="@+id/eng_name_text_view"
        app:layout_constraintEnd_toStartOf="@+id/animal_image_view"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/eng_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/eng_name_text_view"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>